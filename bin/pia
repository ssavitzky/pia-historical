#!/bin/sh
#	$Id$
# Pia launcher. 
#	
#
# Usage: 
#	pia [PIA_DIR piadirectory]
#
#	piadirectory  -- is the directory which the PIA is installed


if [ -n "$(echo $1 | grep 'PIA_DIR=')" ] ; then
    PIA_PATH=$1
    PIA_DIR=${PIA_PATH#PIA_DIR=}
    if [ "$PIA_DIR" = "" ] ; then
	echo 'usage: pia PIA_DIR=piadirectory args...'
	exit 1
    else
	shift
    fi
fi

if [ "$PIA_DIR" != "" ] ; then 
    ROOT="-root '$PIA_DIR'"
fi

if [ "$USR_DIR" != "" ] ; then
    USR="-u '$USR_DIR'"
fi
# ... other pia environment variables go here

exec pia_wrapper crc.pia.Pia $ROOT $USR $*


















