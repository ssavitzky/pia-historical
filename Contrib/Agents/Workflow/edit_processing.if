<!doctype html public "-//IETF//DTD HTML//EN//2.0">
<html><head>
<title>&agentName; edit processing</title>
<link rev="made" href="mailto:wolff@crc.ricoh.com"></link>
</head><body>
<set entity name=title> edit <get form name=form>  processing</set>
<read interform file="heading.inc" process>
 
<tagset-load name=Form-agent-actors>

<if-in-group group=admin>
 <if> <get form name=form> <then>
 <set name=form><get form name=form></set>
 <if> <read info file=&usrDIR;/Agents/&agentName;/&form;/&form;_process.if>
      <then> <set name=pname>&form;_process.if</set></then>
      <else><set name=pname>process.if</set></else></if>
<form action="&url;" method=post process copy>
 <process>
 <file name=&pname; dst=&pname;.bak rename base=&usrDIR;/Agents/&agentName;/&form;/></file>
 <write file=&usrDIR;/Agents/&agentName;/&form;/&pname;><get form
 name=content></write>
</process>
<input name="form"  value=&form; type=hidden>
<h2> Processing for &form;</h2>
<textarea name="content" rows=40 cols=70>
<read file=&usrDIR;/Agents/&agentName;/&form;/&pname;>
</textarea>
<input type="SUBMIT" value="Apply Changes">
</form>

</then>
<else> Please <a href="edit_forms.if"> specify form to edit</a> </else>
</if>
</if-in-group>
<hr>
 
<expand><get agent name=navbar></expand>
