<!doctype html public "-//IETF//DTD HTML//EN//2.0">
<html><head>
<title>&agentName; route</title>
<link rev="made" href="mailto:wolff@crc.ricoh.com"></link>
</head><body>
<set entity name=title> Route </set>
<read interform file="heading.inc" process>


<tagset-load name=Form-agent-actors>

<set local name=rfile><subst result=".route.html"
  match=".html"><get form name=formurl></subst></set>
<set name=myroute><read file=&rfile; process></set>

 <set name=fparam>&formurl=<get form name=formurl></set>
<h4>This is the nominal route for <a
href=show_signatures.if?formurl=&FORM.formurl;>&FORM.formurl;</a></h4>
(Click on user name to send this form to that user.)
<ol>
  <set name=routes><dummy><get name=myroute findall=routeuser></set>
<repeat list=&routes; entity=u>
   <if><get index=u.authorizor attr=type> <then><set name=myto><get
   index=u.authorizor.Text>&signas=<get index=u.authorizor attr=type></set></then>
   <else><set name=myto><get index=u.Text></set></else> </if>
<li><get index=u.authorizor attr=type><a href=route_form.if?touser=&myto;&fparam;> &u; </a></li>
</repeat>
</ol>

<form method="get" action="edit_route.if">
<input name="routefile" type="hidden" value="&rfile;">
<input name="form" type="hidden" value="&FORM.formurl;">
<input type="submit" value="Edit Route">
</form>

<h4> This is what has hapened to the form so far </h4>
<show-form-history form=&FORM.formurl;>


<h4> Send this form to somebody else:</h4>
<form action=route_form.if method=post>
 <input name=formurl type=hidden value=&FORM.formurl;>
 Recipient: <select name="touser"> 
    <repeat list=&AGENT.users.keys;> <option>&li;</option></repeat>
    </select>
<input type=submit value="Send Form for Signature">

 </form>
<expand><get agent name=navbar></expand>
