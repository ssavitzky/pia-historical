<!doctype html public "-//IETF//DTD HTML//EN//2.0"><HTML>
<html><head>
<title>Readers' Helper Server Group Editor</title>
</head>

<body bgcolor="#ffffff" link="#c40026" vlink="#e40026">
<h1>Readers' Helper Group Editor</h1>

&urlQuery;

<FORM METHOD="POST" ACTION="/RHServer/group_edit">

<p>
<b>Group Name: </b><input size=40 name="GroupName" value="">


<TABLE BORDER=1 CELLSPACING=5 CELLPADDING=2 COLS=3 WIDTH="75%" HEIGHT="33%" NOSAVE >
<TR>
<TH>All Concepts</TH>
<TH></TH>
<TH>Group Concepts</TH>
</TR>

<TR> 
<TD>
<!-- Add list of groups -->
<SELECT NAME="allconcepts" SIZE=10>
	<concepts path="/RHServer/simple.xml"></concepts>
</SELECT>

</TD>
<TD VALIGN=middle ALIGN=center ROWSPAN=2>
	<input type="submit" name=" Add " value="Add >>"> 
	<input type="submit" name=" Remove" value=" << Remove"> 
</TD>

<TD><SELECT NAME="groupconcepts" SIZE=10>
	<OPTION>-- No concepts selected yet --
</select>
</TD>
</TR>
</TABLE>

<p>

<!-- Add group command buttons -->
<input type="submit" name="GroupSubmit" value="Submit"> 
<input type="submit" name="GroupReset" value="Reset"> 

</form>


<footer />
</BODY>
</HTML>
