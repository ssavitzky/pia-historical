<!-- Add list of groups -->
<SELECT NAME="gmenu" SIZE=10 WIDTH=160>
	<get-all-groups></get-all-groups>
</SELECT>
</TD>
</TR>
<TR>
<TD>
<!-- Add group command buttons -->
<input type="submit" name="AddGroup" value="Add"> 
<input type="submit" name="EditGroup" value="Edit"> 
<input type="submit" name="DeleteGroup" value="Delete">
</form>
</TD>
</TR>
</TABLE>
</CENTER>

</FORM>

