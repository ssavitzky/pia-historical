<h1>Printer initialization for &agentName;</h1>

<code language=perl>

$agent->option('render_method',"latex");
$agent->option('preview_number',"100");
$agent->option('thumbsize',"72");
$agent->option('thumb_width',"100");
$agent->option('thumb_height',"140");
$agent->option('book_depth',"2");
$agent->option('cache_only',"1");
$agent->option('max_pages',"2000");
$agent->option('device',"lp");

my $name= $agent->name;
my $printer_root_directory=$agent->agent_directory . "spool/";
$agent->option('printer_root_directory',$printer_root_directory);

mkdir($printer_root_directory, 0777) unless -d $printer_root_directory;

$agent->option('printer_base_url',$agent->agent_url . "spool/");

"initialized $name";
</code>




