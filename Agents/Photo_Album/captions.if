<!doctype html public "-//IETF//DTD HTML//EN//2.0">
<html><head>
<title>caption processing</title>
<link rev="made" href="mailto:wolff@crc.ricoh.com"></link>
</head><body>
<h1>&agentName; captions</h1>
<set name=directory>&FORM.directory;</set>
<set name=files>&FORM.files;</set>
<if><test>&AGENT.rowsize;</test><else><set agent name=rowsize>6</set></else></if>
<p>

<h2>&FORM.captTitle;</h2>
<!-- code for making tables... should reuse but currently just cut and paste -->
<table><set name=rowelements>0</set>
<tr>
<repeat list="&files;">
<if><test><get form name="&li;"></test><then>
<td><a href="/Photos/&directory;/&li;.jpg"><img src="/Photos/&directory;/&li;.small.gif"><br><get form name="&li;"></get></a>
<set name=rowelements>&rowelements; 1</set>
</then></if>
<if><test><equal numeric>&rowelements; &AGENT.rowsize;</equal></test><then><TR></then></if>
</repeat>
</table>

<write file="&directory;/captions.html" append>
<h1>&FORM.captTitle;</h1>
<table><set name=rowelements>0</set>
<tr>
<repeat list="&files;">
<if><test><get form name="&li;"></test><then>
<td><a href="&li;.jpg"><img
src="&li;.small.gif"><br><get form name="&li;"></get></a>
<set name=rowelements>&rowelements; 1</set>
</then></if>
<if><test><equal numeric>&rowelements; &AGENT.rowsize;</equal></test><then><TR></then></if>
</repeat>
</table>
</write>

<!-- also write cap file for each-->
<repeat list="&files;">
<if><test><get form name="&li;"></get></test>
<then><write append file="&directory;/&li;.cap"><get form name=&li;></get>
</write></then>
</if>
</repeat>
<write append file=&AGENT.master_list;>
<a href="/Photos/&directory;/captions.html">&FORM.captTitle;</a>
</write>
<hr>
