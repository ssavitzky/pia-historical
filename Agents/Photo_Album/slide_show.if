<h3>choose directory</h3>
<set name=directories><read file=".catalog"></set>
<form method=POST action="slide_show.if">
<select name=directory>
<option foreach=&directories;>&li;</option></select>
<input type=submit value="ShowSlides">
</form>
</else>
</if>

