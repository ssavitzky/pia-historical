<meta HTTP-EQUIV="Refresh" CONTENT="10;
URL=show_slide.if"></meta>
<!doctype html public "-//IETF//DTD HTML//EN//2.0">
<html><head>
<title>slideshow</title>
<link rev="made" href="mailto:wolff@crc.ricoh.com"></link>
</head><body>
<set name=slide><if>&FORM.slide<then>&FORM.slide</then><else>&AGENT.next_slide</else></if></set>
<set name=file><get>AGENT.slides.&slide;</get></set>
<set name=sfile><subst match=".jpg" result="">&file;</subst></set>
<h1><read file=&sfile;.cap></read></h1>
<img src="/Photos/&file;">
<set name=previous><subtract>&slide; 1</subtract></set>
<set name=next><add>&slide; 1</add></set>
<form method=POST action=show_slide.if><input type=hidden name=slide value=&previous;><input type=submit value=Previous></form>
<form method=POST action=show_slide.if><input type=hidden name=slide value=&next;><input type=submit value=Next></form>
<set name="AGENT.next_slide">&next;</set>
<!-- onlyoneslideshowatatime -->
